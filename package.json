{
  "name": "@yaohaixiao/delegate.js",
  "version": "0.8.0",
  "description": "delegate.js 是一个轻量级的 JavaScript 事件委托库，封装了：on()、once()、off() 等事件侦听相关的常用方法，使用起来方便灵活。",
  "main": "delegate.min.js",
  "scripts": {
    "start": "gulp start",
    "build": "gulp build",
    "clean": "gulp clean",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "eslint",
    "lint:fix": "npm run lint --cache --fix",
    "prettier:check": "npx prettier --check \"**/*.js\"",
    "prettier:write": "npx prettier --write \"**/*.js\"",
    "prepare": "husky install",
    "transpile": "gulp transpile",
    "watch": "gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yaohaixiao/delegate.js.git"
  },
  "keywords": [
    "JavaScript",
    "Event",
    "Delegate"
  ],
  "author": "Robert Yao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yaohaixiao/delegate.js/issues"
  },
  "homepage": "https://github.com/yaohaixiao/delegate.js#readme",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.14.8",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "browserify": "^3.46.1",
    "commitlint": "^17.4.4",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-connect": "^5.7.0",
    "gulp-eslint": "^6.0.0",
    "gulp-livereload": "^4.0.2",
    "gulp-open": "^3.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-umd": "^2.0.0",
    "gulp-watch": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "os": "^0.1.2",
    "prettier": "^2.8.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:fix",
      "prettier --write"
    ]
  }
}
